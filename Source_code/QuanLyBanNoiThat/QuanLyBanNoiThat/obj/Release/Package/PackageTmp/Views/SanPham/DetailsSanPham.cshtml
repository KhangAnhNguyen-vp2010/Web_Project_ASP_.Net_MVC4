@model QuanLyBanNoiThat.Models.SANPHAM

@{
    ViewBag.Title = "DetailsSanPham";
    Layout = "~/Views/Shared/_LayOutShop.cshtml";
}

<style>
    /* ... các style đã có ... */

    .tour-details {
        background-color: #f5f5f5;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        margin: auto;
        width: 30%;
        margin-top:0px;
    }

    .tour-image {
        text-align:center;
    }

    .tour-description {
        padding-left: 20px;
    }

    .tour-description p {
        margin-bottom: 10px;
    }

    .tour-actions {
        text-align: center;
        margin-top: 20px;
    }

    .my-button {
          background-color: #f2b2ef;
          border: none;
          color: white;
          padding: 15px 32px;
          text-align: center;
          text-decoration: none;
          display: inline-block;
          font-size: 16px;
          margin: 4px 2px;
          cursor: pointer;
          border-radius: 4px;
    }

    .my-button:hover {
        background-color: #f399f9;
        color:white;
    }

    /* ... các style responsive và tùy chỉnh khác ... */
</style>

<div class="tour-details">
    <div class="tour-info">
        <div class="tour-image">
            @if (!string.IsNullOrEmpty(Model.HINHANH))
            {
                <img src="@Url.Content("~/Picture/Shop/" + Model.HINHANH)" alt="" style="max-width:300px; max-height:300px;" />
            }
            else
            {
              <span>Không có hình ảnh</span>
            }
        </div>

        <div class="tour-description">
            <h3>Mã Sản Phẩm: @Model.MASP</h3>
            <h3>Tên Sản Phẩm: @Model.TENSP</h3>
            <p><strong>Mô Tả:</strong> @Model.MOTA</p>         
            <p><strong>Giá:</strong> @Model.GIA Đồng</p>
            <p><strong>Mã Loại:</strong> @Model.MALOAI</p>
            <p><strong>Số Lượng Tồn:</strong> @Model.SL_TON</p>
        </div>
    </div>

    <div class="tour-actions">
        <a href="@Url.Action("ShowSanPham")" class="my-button">Về Shop</a>
    </div>
</div>
